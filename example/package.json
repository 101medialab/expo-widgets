{
  "name": "expo-widgets-example",
  "version": "1.0.0",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start --dev-client",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "prebuild:ios": "EXPO_NO_CACHE=true EXPO_NO_GIT_STATUS=true expo prebuild -p ios --clean",
    "prebuild:android": "EXPO_NO_CACHE=true EXPO_NO_GIT_STATUS=true expo prebuild -p android --clean"
  },
  "dependencies": {
    "@bittingz/expo-widgets": "^2.0.0-next",
    "expo": "^52.0.41",
    "expo-dev-client": "~5.0.15",
    "expo-splash-screen": "~0.29.22",
    "expo-status-bar": "~2.0.1",
    "react": "18.3.1",
    "react-native": "0.76.7"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@types/react": "~18.3.12",
    "babel-plugin-module-resolver": "^5.0.2",
    "typescript": "^5.3.0",
    "xcode": "^3.0.1"
  },
  "private": false,
  "expo": {
    "autolinking": {
      "nativeModulesDir": ".."
    }
  }
}
